<% include ../partials/header %>
<div class="container">
    <header id="header">
	</header>
</div>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h3 style="text-align: center">Create a New Post!</h3>
            <form action="/posts" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input 
                    class="form-control" type="text" 
                    name="name" 
                    placeholder="name">
                </div>
                <div class="form-group">
                    <input 
                    class="form-control" type="file" 
                    name="image"
                    accept="image/*" placeholder="image" required
                    />
                </div>
                <div class="form-group">
                    <textarea 
                    class="form-control" name="description" placeholder="Write Your Post Here">
                    </textarea>
                </div>
                <div class="form-group">
                    <button>Submit!</button>
                </div>
            </form>
            <a href="/posts" class="button small">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>